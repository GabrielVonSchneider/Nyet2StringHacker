            Grid.Row="2"
            Name="EditPanel"
        >
            <CheckBox
                VerticalContentAlignment="Center"
                Grid.Row="2"
                Grid.Column="0"
                IsChecked="{Binding SelectedLine.Done}"
                Margin="3, 3, 3, 3"
                Focusable="False"
            >
                <TextBlock Focusable="False">
                Is Edited
                <LineBreak/>
