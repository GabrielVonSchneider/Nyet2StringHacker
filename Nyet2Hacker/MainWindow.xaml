<Window x:Class="Nyet2Hacker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyet2Hacker"
        mc:Ignorable="d"
        Title="Nyet II String Hacker" Height="460" Width="659"
        FontFamily="Calibri" AllowDrop="True"
        DragEnter="Window_DragEnter"
        Drop="Window_Drop"
    >
    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5, 0, 5, 0"/>
        </Style>
        <DataTemplate
            x:Key="OrilineTemplate"
            DataType="{x:Type local:LineViewModel}"
        >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="1"
                    Text="{Binding OriginalText}" VerticalAlignment="Center"
                />
                <CheckBox
                    Grid.Column="0"
                    IsChecked="{Binding Done}"
                    VerticalAlignment="Center"
                />
            </Grid>
        </DataTemplate>
        <DataTemplate
            x:Key="TranslineTemplate"
            DataType="{x:Type local:LineViewModel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="1"
                    Text="{Binding TransText}" VerticalAlignment="Center"
                />
                <CheckBox
                    Grid.Column="0"
                    IsChecked="{Binding Done}"
                    VerticalAlignment="Center"
                />
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="133"/>
        </Grid.RowDefinitions>
        <DockPanel 
            Grid.Row="4"
            HorizontalAlignment="Left" Visibility="Collapsed" Width="0">
            <DockPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="80"/>
                    <Setter Property="Height" Value="25"/>
                    <Setter Property="Margin" Value="3, 3, 3, 3"/>
                </Style>
            </DockPanel.Resources>
            <Button Visibility="Collapsed">Yes</Button>
            <Button Visibility="Collapsed">No</Button>
            <Button>Cancel</Button>
        </DockPanel>
        <RichTextBox 
            x:Name="output"
            Grid.Row="3"
            IsReadOnly="True"
            Margin="3, 3, 3, 3"
            FontFamily="Consolas"
            Grid.ColumnSpan="2"
        >
            <FlowDocument>
                <Paragraph>
                    Hello!
                    <LineBreak/>
                    This is the Nyet II string hacker.
                    You can use it to modify all text in the
                    game "Nyet II".
                    <LineBreak/>
                    To start editing, drag and drop NYET2.OVL on the window.
                    <LineBreak/>
                    If you've already saved a project file,
                    you can open that using the same method.
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ListBox
            ItemsSource="{Binding Lines}"
            SelectedIndex="{Binding SelectedLine}"
            Grid.ColumnSpan="2"
            ItemTemplate="{StaticResource OrilineTemplate}"
            HorizontalContentAlignment="Stretch"
            FontFamily="Consolas"
        />
        <TextBox 
            Grid.Row="1"
            Grid.Column="1"
            KeyDown="TextBox_KeyDown"
            AcceptsReturn="False"
            Text="{Binding WorkText}"
            Height="30"
        />
        <CheckBox
            VerticalContentAlignment="Center"
            Grid.Row="1"
            Grid.Column="0"
        >
            <TextBlock>
                Is Edited
                <LineBreak/>
                (Ctrl-E)
            </TextBlock>
        </CheckBox>
        <ListBox
            ItemsSource="{Binding Lines}"
            Grid.Row="2"
            SelectedIndex="{Binding SelectedLine}" Grid.ColumnSpan="2" ItemTemplate="{DynamicResource TranslineTemplate}"
            HorizontalContentAlignment="Stretch"
        />
    </Grid>
</Window>
